<!DOCTYPE html>
<html lang="en">
	<head>
  	<meta charset="utf-8">
  	<meta name="description" content="Your description goes here">
  	<meta name="keywords" content="one, two, three">
	<meta name="viewport" content="width=device-width, initial-scale=1">
		
		<title>DMhelper</title>

		<!-- external CSS link -->
		<link rel="stylesheet" href="css/normalize.css">
		<link rel="stylesheet" href="css/style.css">
	</head>
	<body>
		<h1>DM Ecounter Builder Tool</h1>
		<form action="/addEncounter" method="POST">
			<div>
				<label for="creature">Creature</label>
				<input type="text" name="creature" id="">
			</div>
			<div>
				<label for="setting">Scene</label>
				<input type="text" name="setting" id="">
			</div>
			<div>
				<label for="event">Event</label>
				<input type="text" name="event" id="">
			</div>
			<div>
				<input type="submit" value="Create" id="">
			</div>
		</form>
        <h2>Created Encounters</h2>
        <ul class="">
            <% for(var i = 0; i < encounters.length; i++) {%>
              <li class="quote">
                <span>Creature: <%= encounters[i].creature %></span>:
                <span>Scene: <%= encounters[i].setting %></span>:
                <span>Event: <%= encounters[i].event %></span>
            </li>
            <% } %>
          </ul>
		<script type="text/javascript" src="js/main.js"></script>
	</body>
</html>